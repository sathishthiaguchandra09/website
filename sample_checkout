pipeline{
    agent any
    environment{
        PATH = "/opt/apache-maven-3.6.3/bin:$PATH"
        }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'github', url: 'https://github.com/sathishthiaguchandra09/website.git'
                echo "Welcome to declarative pipeline"
                }
          }
        stage("MVN build"){
            steps{
                sh "mvn clean package"
                }
            }
        }
    }
